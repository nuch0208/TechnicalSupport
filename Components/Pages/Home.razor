@code {
    // Mobile menu
    private bool _mobileOpen;
    private void ToggleMobileNav() => _mobileOpen = !_mobileOpen;

    // Search
    private string? SearchText;

    private void DoSearch()
    {
        var q = (SearchText ?? "").Trim();
        if (string.IsNullOrWhiteSpace(q))
            return;

        Nav.NavigateTo($"/search?q={Uri.EscapeDataString(q)}");
    }

    private void OnSearchKeyDown(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
            DoSearch();
    }

    // Language (EN/TH) + dropdown open/close
    private string Lang = "en";   // "en" | "th"
    private bool _langOpen;

    private void ToggleLang() => _langOpen = !_langOpen;

    private void SetLang(string lang)
    {
        Lang = lang;
        _langOpen = false; // ✅ เลือกแล้วปิด dropdown

        // TODO: ถ้าจะทำ i18n จริง ค่อยผูก Localizer / Cookie / LocalStorage ตรงนี้
    }
}

